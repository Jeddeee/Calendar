@page
@model CalendarApp.Pages.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
</head>
<body>
    <h2>Login</h2>
    <form method="post">
        <label>Username:</label>
        <input type="text" name="Username" required /><br />

        <label>Password:</label>
        <input type="password" name="Password" required /><br />

        <button type="submit">Login</button>
    </form>

    <p>Don't have an account? <a asp-page="/Signup">Sign up here</a></p>
</body>
</html>
